<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Tushar</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="bg-zinc-900 text-white min-h-screen">

    <div class="w-full max-w-6xl mx-auto p-10">

        <!-- Navigation -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-4xl font-bold">All Wallpapers</h1>
            <a class="text-blue-400 hover:text-blue-600 transition duration-300" href="/">üîô Back to Home</a>
        </div>

        <!-- Users Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

            <% if (users.length > 0) { %>
                <% users.forEach(function(user) { %> 
                    <div class="bg-zinc-800 rounded-xl shadow-lg overflow-hidden transition hover:scale-105 hover:shadow-2xl duration-300">

                        <!-- Uniform Image Container -->
                        <div class="w-full h-152 bg-gradient-to-br from-zinc-700 to-zinc-900 relative">
                            <img 
                                class="w-full h-full object-cover rounded-t-xl"
                                src="<%= user.image %>" 
                                alt="User Image"
                                onerror="this.src='/images/placeholder.png';"
                            >
                        </div>

                        <!-- User Details -->
                        <div class="p-6">
                            <h3 class="text-2xl font-semibold mb-2"><%= user.name %></h3>
                            <p class="text-zinc-400"><%= user.email %></p>

                            <div class="flex justify-between items-center mt-6">
                                <a href="/edit/<%= user._id %>" 
                                   class="text-blue-400 hover:text-blue-600 transition duration-300">‚úèÔ∏è Edit</a>
                                <a href="/delete/<%= user._id %>" 
                                   class="text-red-400 hover:text-red-600 transition duration-300">üóëÔ∏è Delete</a>
                                <a href="<%= user.image %>" target="_blank" 
                                   class="text-green-400 hover:text-green-600 transition duration-300">üîç View Full</a>
                            </div>
                        </div>

                    </div>
                <% }) %>
            <% } else { %> 
                <p class="text-xl text-zinc-400">No Wallpaper found</p>
            <% } %>

        </div>

    </div>

</body>
</html>
